@page
@model ServiceHost.Pages.Authenticate;
@{ ViewData["Title"] = "Login & Register";
}


@await Component.InvokeAsync("Mobile");
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">Login - Register</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a href="index.html">Home</a></li>
                            <li class="active">Login - Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">Login</h4>
                                        <div class="row">
                                            @if (@Model.LoginMessage != null)
                                            {
                                                <span class="alert text-danger"> @Model.LoginMessage </span>
                                            }

                                            <div class="col-md-12 col-12">
                                                <label>Username</label>
                                                <input type="text" name="UserId" placeholder="Username">
                                            </div>
                                            <div class="col-12">
                                                <label>Password</label>
                                                <input type="password" name="Password" placeholder="Password">
                                            </div>
                                            <div class="col-sm-6">

                                                <div class="check-box d-inline-block ml-0 ml-md-2">
                                                    <input type="checkbox" id="remember_me">
                                                    <label for="remember_me">Remember me</label>
                                                </div>

                                            </div>

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link"> Forgotten pasward?</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">Login</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                <form method="post" asp-page-handler="RegisterUser">

                                    <div class="login-form">
                                        <h4 class="login-title">Register</h4>

                                        <div class="row">
                                            @if (@Model.RegisterMessage != null)
                                            {
                                                <span class="text-danger alert ltr"> @Model.RegisterMessage </span>
                                            }
                                            @if (@Model.RegisterSuccess != null)
                                            {
                                                <span class="text-success alert ltr"> @Model.RegisterSuccess </span>
                                            }
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>First Name</label>
                                                <input type="text" name="FullName" placeholder="Full Name">
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>Last Name</label>
                                                <input type="text" name="UserId" placeholder="Username">
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>Email Address*</label>
                                                <input type="email" name="Email" placeholder="Email Address">
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>Phone Number</label>
                                                <input type="number" name="PhoneNumber" placeholder="Phone Number">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>Password</label>
                                                <input type="password" name="Password" placeholder="Password">
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>Confirm Password</label>
                                                <input type="password" name="ConfirmPassword" placeholder="Confirm Password">
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">Register</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>