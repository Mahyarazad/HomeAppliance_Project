                                    </div>
                                    <span id="span-star" class="col-1 mr-5 pr-5">(@Model.ScoreList["3-star"])</span>
                                    <div class="col-2" id="star-wrapper">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
