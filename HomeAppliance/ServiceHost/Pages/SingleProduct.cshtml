@section Scripts{

    <script type="text/javascript">

        // Catpture starts
        const btn = document.querySelector(".submit-rating");
        const thanksmsg = document.querySelector(".thanks-msg");
        const starRating = document.querySelector(".star-input");
//        btn.onclick = () => {
//            starRating.style.display = "none";
//            thanksmsg.style.display = "table";
//            return false;
//        };

        // Comment Stars
        $(function () {



            function addScore(score, $domElement) {
                $("<span class='stars-container'>")
                    .addClass("stars-" + score.toString())
                    .text("★★★★★")
                    .appendTo($domElement);
            }

            function addBarClass(commentCount, totalComment, $domElement) {
                var targetClass = commentCount / totalComment * 100;
                targetClass = Math.ceil(targetClass / 10) * 10;
                $domElement.addClass("bar-" + targetClass.toString());
            }

            @foreach (var item in Model.ScoreList)
            {
                <text>
                    addBarClass(@item.Value,@Model.CommentCount ,$("#@item.Key"));
                </text>
            }

            @foreach (var item in Model.Comments)
            {
                <text>
                    addScore(@item.Rating * 20, $("#@item.Id"));
                </text>
            }
            addScore(@Model.AverageScore * 20, $("#average-score"));
            addScore(@Model.AverageScore * 20, $("#product-rating"));
            $("#average-score").find("span").addClass("h2");
            $("#product-rating").children('span')[1].classList.add("h5");

        });
        $(window).on('resize', function() {
            if ($(window).width() < 500) {
                var domElement = $('span[id="span-star"]');
                var _domElement = $('div[id="star-wrapper"]');
                var __domElement = $('div[id="bar-container"]');
                domElement.each(function (index, item) {
                    $(item).removeClass('mr-5');
                    $(item).removeClass('pr-5');
                })
                _domElement.each(function(index, item) {
                    $(item).addClass('col-5');
                    $(item).removeClass('col-2');
                })
                __domElement.each(function (index, item) {
                    $(item).addClass('col-6');
                    $(item).removeClass('col-9');
                })
            }
            if ($(window).width() > 500) {
                var domElement = $('span[id="span-star"]');
                var _domElement = $('div[id="star-wrapper"]');
                var __domElement = $('div[id="bar-container"]');
                domElement.each(function (index, item) {
                    $(item).addClass('mr-5');
                    $(item).addClass('pr-5');
                })
                _domElement.each(function (index, item) {
                    $(item).removeClass('col-5');
                    $(item).addClass('col-2');
                })
                __domElement.each(function (index, item) {
                    $(item).removeClass('col-6');
                    $(item).addClass('col-9');
                })
            }
        });

        $('#go-to-view').on('click', function(e){
            e.preventDefault();
            var reviewSection = document.getElementsByClassName('product-rating-wrap')[0];
            $('#description-tab').removeClass('active');
            $('#product-description').removeClass('active').removeClass('show');
            $('#review-tab').addClass('active');
            $('#review').addClass('active').addClass('show');
            reviewSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });

        $('#go-to-view-').on('click', function (e) {
            e.preventDefault();
            var reviewSection = document.getElementsByClassName('rating-form')[0];
            $('#description-tab').removeClass('active');
            $('#product-description').removeClass('active').removeClass('show');
            $('#review-tab').addClass('active');
            $('#review').addClass('active').addClass('show');
            reviewSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    </script>
}