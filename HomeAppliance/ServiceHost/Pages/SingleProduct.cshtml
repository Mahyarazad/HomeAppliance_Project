                                        <div id="2-star" class="float-left"></div>
                                    </div>
                                    <span id="span-star" class="col-1 mr-5 pr-5">(@Model.ScoreList["2-star"])</span>
                                    <div class="col-2" id="star-wrapper">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                </div>

