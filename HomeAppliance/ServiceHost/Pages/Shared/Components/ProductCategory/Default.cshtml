@model List<Query.Contracts.ProductCategory.ProductCategoryQueryModel>
<!--====================  category area ====================-->
<div class="category-area section-space">
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!--=======  category wrapper  =======-->
            <div class="category-wrapper py-4">
                <div class="row row-10 masonry-category-layout">
                    @foreach (var item in Model)
                    {
                        if (item.IsActive)
                        {
                            <div class="col-lg-4 col-sm-6 grid-item">
                                <!--=======  single category item  =======-->

                                <div class="p-1 single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory" asp-route-id="@item.Slug">
                                            <img src="~/Images/@item.Name/@item.Picture" class="img-fluid"
                                                 title="@item.PictureTitle"
                                                 alt="@item.PictureAlt">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@item.Name</h3>
                                        <a asp-page="./ProductCategory" asp-route-id="@item.Slug">
                                            <i
                                                class="ion-android-arrow-dropleft-circle">
                                            </i> Shop Now
                                        </a>
                                    </div>
                                </div>

                                <!--=======  End of single category item  =======-->
                                <!--</div>-->
                            </div>
                        }
                    }
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>

<!--======  End of category area  ====================-->