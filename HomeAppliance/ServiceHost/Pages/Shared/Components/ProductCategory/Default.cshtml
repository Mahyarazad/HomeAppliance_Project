@model List<Query.Contracts.ProductCategory.ProductCategoryViewModel>
<!--====================  category area ====================-->
<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout">
                        <!--div class="col-lg-4 col-sm-6 grid-item"-->
                        <div class="d-flex flex-wrap">
                            <!--=======  single category item  =======-->
                            @foreach (var item in Model)
                            {
                                <div class="single-category-item col-md-4">
                                    <div class="single-category-item__image">
                                        <a asp-page="/ProductCategory" asp-route-id="@item.Slug">
                                            <img src="@item.Picture" class="img-fluid"
                                                 alt="@item.PictureAlt"
                                                 title="@item.PictureTitle">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@item.Name</h3>
                                        <a href="shop-left-sidebar.html">
                                            <i class="ion-android-arrow-dropleft-circle"></i> Shop Now
                                        </a>
                                    </div>
                                </div>
                            }
                            <!--=======  End of single category item  =======-->
                        </div>
                    </!--div>
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>
<!--====================  End of category area  ====================-->