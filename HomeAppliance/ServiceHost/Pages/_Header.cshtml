@inject _0_Framework.Application.IAutenticateHelper AuthHelper;
<!--====================  header area ====================-->
<div class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  header wrapper  =======-->
                <div class="header-wrapper d-none d-lg-flex">
                    <!-- logo -->
                    <div class="logo">
                        <a asp-area="Administrator" asp-page="/Index">
                            <img src="~/assets/img/logo.png" class="img-fluid" alt="">
                        </a>
                    </div>
                    <!-- menu wrapper -->
                    <div class="navigation-menu-wrapper">
                        <nav>
                            <ul>
                                <li>
                                    <a asp-page="./Index">HOME</a>
                                </li>

                                <li class="menu-item-has-children">
                                    <a href="#">PAGES</a>
                                    <ul class="sub-menu">
                                        <li class="menu-item-has-children">
                                            <a href="#">Page List One</a>
                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="cart.html">Cart</a>
                                                </li>
                                                <li>
                                                    <a href="checkout.html">Checkout</a>
                                                </li>
                                                <li>
                                                    <a href="wishlist.html">Wishlist</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li class="menu-item-has-children">
                                            <a href="#">page list two</a>
                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="my-account.html">My Account</a>
                                                </li>
                                                <li>
                                                    <a href="login-register.html">Login Register</a>
                                                </li>
                                                <li>
                                                    <a href="faq.html">FAQ</a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li class="menu-item-has-children">
                                            <a href="#">Page list three</a>
                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="compare.html">Compare</a>
                                                </li>
                                                <li>
                                                    <a href="contact.html">Contact</a>
                                                </li>
                                                <li>
                                                    <a href="about.html">About Us</a>
                                                </li>

                                            </ul>
                                        </li>
                                    </ul>
                                </li>

                                <li class="menu-item-has-children">
                                    <a href="blog-left-sidebar.html">BLOG</a>
                                    <ul class="sub-menu">
                                        <li>
                                            <a href="blog-left-sidebar.html">Blog Left Sidebar</a>
                                        </li>
                                    </ul>
                                </li>

                                <li>
                                    <a href="contact.html">CONTACT</a>
                                </li>
                                @if (AuthHelper.IsAuthenticated())
                                {
                                    <li>
                                        <a href="#">@AuthHelper.Username()</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                    <!-- header icon -->
                    <div class="header-icon-wrapper">
                        <ul class="icon-list">
                            <li>
                                <a href="javascript:void(0)" id="search-overlay-trigger">
                                    <i class="ion-ios-search-strong"></i>
                                </a>
                            </li>
                            <li>
                                <div class="header-cart-icon">
                                    <a href="#" id="minicart-trigger">
                                        <i class="ion-bag"></i>
                                        <span class="counter" id="header-counter"></span>
                                    </a>
                                    <partial name="_MiniCart"/>
                                    <!-- mini cart  -->


                                </div>
                            </li>
                            <li>
                                <div class="header-settings-icon">
                                    <a href="javascript:void(0)" class="header-settings-trigger"
                                       id="header-settings-trigger">
                                        <div class="setting-button">
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                        </div>
                                    </a>

                                    <!-- settings menu -->
                                    <div class="settings-menu-wrapper" id="settings-menu-wrapper">
                                        <div class="single-settings-block">
                                            @if (AuthHelper.IsAuthenticated())
                                            {
                                                <h4 class="title">@AuthHelper.Username() </h4>
                                                <ul>
                                                    <li>
                                                        <a asp-page="./Authenticate" asp-page-handler="Logout">Logout</a>
                                                    </li>
                                                </ul>
                                            }
                                            else
                                            {
                                                <h4 class="title">MY ACCOUNT </h4>
                                                <ul>
                                                    <li>
                                                        <a asp-page="./Authenticate">Register</a>
                                                    </li>
                                                    <li>
                                                        <a asp-page="./Authenticate">Login</a>
                                                    </li>
                                                </ul>
                                            }

                                        </div>
                                        <div class="single-settings-block">
                                            <h4 class="title">CURRENCY: USD </h4>
                                            <ul>
                                                <li>
                                                    <a href="javascript:void(0)">€ Euro</a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0)">$ US Dollar</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="single-settings-block">
                                            <h4 class="title">LANGUAGE: EN-GB </h4>
                                            <ul>
                                                <li>
                                                    <a href="javascript:void(0)">
                                                        <img src="~/assets/img/icons/en-gb.png" alt=""> English
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0)">
                                                        <img src="~/assets/img/icons/de-de.png" alt=""> Germany
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <!--=======  End of header wrapper  =======-->


            </div>
        </div>
    </div>
</div>
<!--====================  End of header area  ====================-->