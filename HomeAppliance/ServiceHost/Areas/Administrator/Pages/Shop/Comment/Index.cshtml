@page
@using _0_Framework.Application
@model ServiceHost.Areas.Administrator.Pages.Shop.Comment.IndexModel
@{

}


<div class='row'>
    <div class="col-sm-12">
        <h1 class="page-title text-dark"> @ViewData["title"] </h1>
        <p class="pull-right">

        </p>
    </div>
</div>

<div class="panel-heading">
    <h3 class="panel-title">Sliders</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table id="myTable" class="display table-condensed table-bordered table-dark table-striped text-center col-md-12">
                <thead style="white-space: nowrap;">
                    <tr>
                        <th class="text-center">Product Id</th>
                        <th class="text-center">Product</th>
                        <th class="text-center">Person Name</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Body</th>
                        <th class="text-center">Modify</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Comments)
                    {
                        <tr>
                            <td> @item.ProductId</td>
                            <td> @item.ProductName</td>
                            <td> @item.PersonName</td>
                            <td> @item.Email</td>
                            <td> @item.Body</td>
                            <td>
                                @if (!item.Accepted)
                                {
                                    <form asp-page-handler="Confirm" asp-page="./Index" data-callback=""
                                          method="post" data-action="Refresh" data-ajax="true">
                                        <input type="hidden" id="Id" name="Id" value="@item.Id"/>
                                        <button id="submitModal" type="submit" class="btn btn-default waves-effect wave-light col-md-6">
                                            <i class="fa fa-2x fa-check text-success"></i>
                                        </button>
                                    </form>
                                }
                                <form asp-page-handler="Deny" asp-page="./Index" data-callback=""
                                      method="post" data-action="Refresh" data-ajax="true">
                                    <input type="hidden" id="Id" name="Id" value="@item.Id"/>
                                    <button id="submitModal" type="submit" class="btn btn-default waves-effect wave-light col-md-6">
                                        <i class="fa fa-2x fa-stop text-danger"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts
{
    @if (TempData["Message"] != null)
    {
        if (TempData["Message"].ToString() == "Operation has been successfully proceeded.")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Your work has been saved',
                    showConfirmButton: false,
                    timer: 1000
                })
            </script>
        }
        else
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: @TempData["Message"],
                    footer: '<a href="">Why do I have this issue?</a>'
                })
            </script>
        }

    }
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: { search: 'Search:', searchPlaceholder: "Search ..." }
            });
            $('input[type="search"]').css('border-width', '1px');
        })
    </script>
}
