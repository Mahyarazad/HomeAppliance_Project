@model SM.Application.Contracts.Slider.EditSlider


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <i class="fa fa-times-circle"></i>
    </button>
    <h4> Modify @Model.Title </h4>
</div>

<form asp-page-handler="Edit" asp-page="./Index"
      data-callback=""
      method="post"
      data-action="Refresh"
      enctype="multipart/form-data"
      data-ajax="true"
      >
    <div class="row">
        <div clas="form-group col-md-12">
            <div class="col-md-12 from-group">
                <label asp-for="Picture">  </label>
                <input asp-for="Picture" type="file" class="form-control" accept="image/*"/>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div clas="form-group col-md-12">
            <div class="col-md-12 from-group">
                <label asp-for="Link">  </label>
                <input asp-for="Link" type="text" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div clas="form-group col-md-12">
            <div class="col-md-6 from-group">
                <label asp-for="PictureTitle"> </label>
                <input asp-for="PictureTitle" type="text" class="form-control" />
                <span asp-validation-for="PictureTitle" class="text-danger"></span>
            </div>
            <div class="col-md-6 from-group">
                <label asp-for="PictureAlt"> </label>
                <input asp-for="PictureAlt" type="text" class="form-control" />
                <span asp-validation-for="PictureAlt" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row from-group">
        <div clas="form-group col-md-12">
            <div class="col-md-6 from-group">
                <label asp-for="Heading"></label>
                <input asp-for="Heading" type="text" class="form-control" />
                <span asp-validation-for="Heading" class="text-danger"></span>
            </div>
            <div class="col-md-6 from-group">
                <label asp-for="Title"> </label>
                <input asp-for="Title" type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row from-group">
        <div clas="form-group col-md-12">
            <div class="col-md-6 from-group">
                <label asp-for="Text"></label>
                <input asp-for="Text" type="text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="col-md-6 from-group">
                <label asp-for="BtnText"> </label>
                <input asp-for="BtnText" type="text" class="form-control" />
                <span asp-validation-for="BtnText" class="text-danger"></span>
            </div>
        </div>
    </div>
    <input asp-for="Id" type="hidden" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal"> Close </button>
        <button id="submitModal" type="submit" class="btn btn-inverse waves-effect waves-light">
            <i class="fa fa-save"></i>
            Save Changes
        </button>
    </div>
</form>