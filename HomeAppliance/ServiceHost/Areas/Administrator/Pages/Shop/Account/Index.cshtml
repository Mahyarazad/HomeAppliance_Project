@model ServiceHost.Areas.Administrator.Pages.Shop.Account.IndexModel
@{

}


<div class='row'>
    <div class="col-sm-12">
        <h1 class="page-title text-dark"> @ViewData["title"] </h1>
        <p class="pull-right">
            <a id="showModal" href="#showmodal=@Url.Page("./Index", "Create")"
               class="btn btn-success wave-effect wave-light">
                <i class="fa fa-plus-circle"></i>
                Create a new Account
            </a>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Search </h3>
            </div>
            <div class="panel-body">
                <form method="get" role="form" class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.FullName"></label>
                        <input class="from-control" placeholder="Product Name"
                               asp-for="SearchModel.FullName" />
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Email"></label>
                        <input class="from-control" placeholder="Product Code"
                               asp-for="SearchModel.Email" />
                    </div>
                    @* *@
                    @* <div class="form-group"> *@
                    @*     <label class="sr-only" asp-for="SearchModel.PhoneNumber"></label> *@
                    @*     <select class="form-control" asp-for="SearchModel.PhoneNumber" *@
                    @*             asp-items="Model.PhoneNumber"> *@
                    @*         <option value="0"> *@
                    @*             Please select a category *@
                    @*         </option> *@
                    @*     </select> *@
                    @* </div> *@
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Search</button>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-purple waves-effect waves-light" asp-page="./Index"> Watch All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="panel-heading">
    <h3 class="panel-title">Products</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table id="myTable" class="display table-condensed table-bordered table-dark table-striped text-center col-md-12">
                <thead style="white-space: nowrap;">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Creation Date</th>
                        <th class="text-center">Full Name</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">User Id</th>
                        <th class="text-center">Phone Number</th>
                        <th class="text-center">Picture</th>
                        <th class="text-center">Role</th>
                        <th class="text-center">Modify</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Accounts)
                    {
                        <tr>
                            <td> @item.Id</td>
                            <td> @item.CreationTime</td>
                            <td> @item.FullName</td>
                            <td> @item.Email</td>
                            <td> @item.UserId</td>
                            <td> @item.PhoneNumber</td>
                            <td>
                                <img src="~/Images/ProfilePicture/@item.ProfilePicture" style="height: 100px; width: 100px;" />
                            </td>
                            <td> @item.Role</td>
                            <td class="col-md-4">
                                <a id="showModal"
                                   href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})"
                                   class="btn btn-warning waves-effect waves-light col-md-4">
                                    <i class="fa fa-edit"></i> Modify
                                </a>
                                <a id="showModal"
                                   href="#showmodal=@Url.Page("./Index", "ChangePassword", new {id = item.Id})"
                                   class="btn btn-dark waves-effect waves-light col-md-8">
                                    <i class="fa fa-key"></i> Change Password
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts
{
    @if (TempData["Message"] != null)
    {
        if (TempData["Message"].ToString() == "Operation has been successfully proceeded.")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Your work has been saved',
                    showConfirmButton: false,
                    timer: 1000
                })
            </script>
        }
        else
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: @TempData["Message"],
                    footer: '<a href="">Why do I have this issue?</a>'
                })
            </script>
        }

    }
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: { search: 'Search:', searchPlaceholder: "Search ..." }
            });
            $('input[type="search"]').css('border-width', '1px');
        })
    </script>
}
