@model AM.Application.Contracts.ChangePassword
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <i class="fa fa-times-circle"></i>
    </button>
    <h4> Edit </h4>
</div>

<form asp-page-handler="ChangePassword" asp-page="./Index"
      data-callback=""
      method="post"
      data-action="Refresh"
      data-ajax="true"
      >
    <div class="row">
        <div clas="form-group col-md-12">
            <div class="col-md-12">
                <p> @Model.Email</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div clas="form-group col-md-12">
            <div class="col-md-6">
                <label asp-for="Password"> Password </label>
                <input asp-for="Password" type="text" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="RePassword"> Retype Password </label>
                <input asp-for="RePassword" type="text" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal"> Close </button>
        <button id="submitModal" type="submit" class="btn btn-inverse waves-effect waves-light">
            <i class="fa fa-save"></i>
            Save Changes
        </button>
    </div>
</form>