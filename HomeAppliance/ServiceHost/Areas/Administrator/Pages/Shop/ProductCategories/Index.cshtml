@page
@model ServiceHost.Areas.Administrator.Pages.Shop.ProductCategories.IndexModel
@{

}


<div class='row'>
    <div class="col-sm-12">
        <h4 class="page-title"> @ViewData["title"] </h4>
        <p class="pull-right">
            <a id="showModal" href="#showmodal=@Url.Page("./Index", "Create")"
               class="btn btn-success wave-effect wave-light">
                <i class="fa fa-plus-circle"></i>
                Create a new Category
            </a>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Search </h3>
            </div>
            <div class="panel-body">
                <form method="get" role="form" class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="from-control" placeholder="Product Category Name"
                               asp-for="SearchModel.Name" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Search</button>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-purple waves-effect waves-light" asp-page="./Index"> Watch All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="panel-heading">
    <h3 class="panel-title">Product Categories</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table id="myTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Creation Time</th>
                        <th>Picture</th>
                        <th>No. Register Products</th>
                        <th>Modify</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductCategories)
                    {
                        <tr>
                            <td> @item.Id</td>
                            <td> @item.Name</td>
                            <td> @item.CreationDate</td>
                            <td>
                                <img src="@item.Picture" style="height: 100px; width: 100px;" />
                            </td>
                            <td> @item.ProductCount</td>
                            <td>
                                <a id="showModal"
                                   href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})"
                                   class="btn btn-warning waves-effect waves-light">
                                    <i class="fa fa-edit"></i> Modify
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts
{
<script>
        $(document).ready(function () {
            $("#myTable").DataTable();
        })
    </script>
}
