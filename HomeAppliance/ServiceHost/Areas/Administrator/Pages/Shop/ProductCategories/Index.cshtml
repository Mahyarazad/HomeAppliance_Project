@page
@using _0_Framework.Application
@using System.Linq
@model ServiceHost.Areas.Administrator.Pages.Shop.ProductCategories.IndexModel
@{

}


<div class='row'>
    <div class="col-sm-12">
        <h1 class="page-title text-dark"> @ViewData["title"] </h1>
        <p class="pull-right">
            <a id="showModal" href="#showmodal=@Url.Page("./Index", "Create")"
               class="btn btn-success wave-effect wave-light">
                <i class="fa fa-plus-circle"></i>
                Create a new Category
            </a>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Search </h3>
            </div>
            <div class="panel-body">
                <form method="get" role="form" class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="from-control" placeholder="Product Category Name"
                               asp-for="SearchModel.Name" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Search</button>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-purple waves-effect waves-light" asp-page="./Index"> Watch All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="panel-heading">
    <h3 class="panel-title">Product Categories</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table id="myTable" class="display table-condensed table-bordered table-dark table-striped text-center col-md-12">
                <thead class="wrapper" id="thead">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Creation Time</th>
                        <th class="text-center">Picture</th>
                        <th class="text-center">No. Register Products</th>
                        <th class="text-center">Modify</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductCategories)
                    {
                        <tr>
                            <td> @item.Id</td>
                            <td> @item.Name</td>
                            <td> @item.CreationDate</td>
                            <td>
                                <img src="~/Images/@item.Name/@item.Picture" style="height: 100px; width: 100px;" />
                            </td>
                            <td> @item.ProductCount</td>
                            <td class="col-md-2">
                                <a id="showModal"
                                   href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})"
                                   class="btn btn-warning waves-effect waves-light col-md-6">
                                    <i class="fa fa-edit"></i> Modify
                                </a>
                                @if (@item.IsActive)
                                {
                                    <form asp-page-handler="Deactive" asp-page="./Index" data-callback=""
                                          method="post" data-action="Refresh" data-ajax="true">
                                        <input type="hidden" id="Id" name="Id" value="@item.Id"/>
                                        <button id="submitModal" type="submit" class="btn btn-default waves-effect wave-light col-md-6">
                                            <i class="fa fa-toggle-on"></i>
                                        </button>
                                    </form>

                                }
                                else
                                {
                                    <form asp-page-handler="Reactive" asp-page="./Index" data-callback=""
                                          method="post" data-action="Refresh" data-ajax="true">
                                        <input type="hidden" id="Id" name="Id" value="@item.Id"/>
                                        <button id="submitModal" type="submit" class="btn btn-default waves-effect wave-light col-md-6">
                                            <i class="fa fa-toggle-off"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts
{

    <script>
    var thead = document.getElementById('thead');
    thead.scrollIntoView({ behavior: 'smooth', block: 'start' });
        $(document).ready(function () {


            $('#myTable').DataTable({
                language: { search: 'Search:', searchPlaceholder: "Search ..."}
            });
            $('input[type="search"]').css('border-width', '1px');
        })

    </script>
}
