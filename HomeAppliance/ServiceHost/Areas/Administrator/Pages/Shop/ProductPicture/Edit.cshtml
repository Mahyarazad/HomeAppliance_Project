@model SM.Application.Contracts.ProductPicture.EditProductPicture
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <i class="fa fa-times-circle"></i>
    </button>
    <h4> Add a new photo </h4>
</div>

<form asp-page-handler="Edit" asp-page="./Index"
      data-callback=""
      method="post"
      data-action="Refresh"
      enctype="multipart/form-data"
      data-ajax="true">
    <div class="row">
        <div clas="form-group col-md-12">
            <div class="col-md-6 form-group">
                <label asp-for="ProductId"> Select Product </label>
                <select class="form-control" name="ProductId" asp-for="ProductId" asp-items='new SelectList(Model.Products,"Id", "Name")'>
                    <option value="Id"></option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="col-md-6 from-group">
                <label asp-for="Picture">  </label>
                <input asp-for="Picture" type="file" class="form-control" accept="image/*"/>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row from-group">
        <div clas="form-group col-md-12">
            <div class="col-md-6 from-group">
                <label asp-for="PictureTitle"></label>
                <input asp-for="PictureTitle" type="text" class="form-control" />
                <span asp-validation-for="PictureTitle" class="text-danger"></span>
            </div>
            <div class="col-md-6 from-group">
                <label asp-for="PictureAlt">  </label>
                <input asp-for="PictureAlt" type="text" class="form-control" />
                <span asp-validation-for="PictureAlt" class="text-danger"></span>
            </div>
        </div>
    </div>
    <input asp-for="Id" type="hidden"/>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal"> Close </button>
        <button id="submitModal" type="submit" class="btn btn-inverse waves-effect waves-light">
            <i class="fa fa-save"></i>
            Save Changes
        </button>
    </div>
</form>