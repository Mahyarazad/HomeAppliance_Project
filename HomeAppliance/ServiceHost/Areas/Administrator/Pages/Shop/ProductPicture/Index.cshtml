@page
@using _0_Framework.Application
@model ServiceHost.Areas.Administrator.Pages.Shop.ProductPicture.IndexModel
@{

}


<div class='row'>
    <div class="col-sm-12">
        <h1 class="page-title text-dark"> @ViewData["title"] </h1>
        <p class="pull-right">
            <a id="showModal" href="#showmodal=@Url.Page("./Index", "Create")"
               class="btn btn-success wave-effect wave-light">
                <i class="fa fa-plus-circle"></i>
                Add a new Picture
            </a>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3> Search </h3>
            </div>
            <div class="panel-body">
                <form method="get" role="form" class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ProductId"> Filter by Product</label>
                        <select class="form-control" asp-items="Model.ProductList" name="ProductId" asp-for="SearchModel.ProductId">
                            <option value="0">
                                Please select a product
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Search</button>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-purple waves-effect waves-light" asp-page="./Index"> Watch All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="panel-heading">
    <h3 class="panel-title">Products</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table id="myTable" class="display table-condensed table-bordered table-dark table-striped text-center col-md-12">
                <thead style="white-space: nowrap;">
                    <tr>
                        <th class="text-center">Product Id</th>
                        <th class="text-center">Picture</th>
                        <th class="text-center">Product Name</th>
                        <th class="text-center">Creation Time</th>
                        <th class="text-center">Deleted</th>
                        <th class="text-center">Modify</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductPictures)
                    {
                        <tr>
                            <td> @item.ProductId</td>
                            <td>
                                <img src="/Images/Site-Picture/@item.Product/@item.Picture" style="height: 100px; width: 100px;" />
                            </td>
                            <td> @item.Product</td>
                            <td> @item.CreationTime</td>
                            <td>
                                @if (item.IsRemoved)
                                {
                                    <i class="fa fa-close fa-2x text-danger"></i>
                                }
                                else
                                {
                                    <i class="fa fa-check fa-2x text-success"></i>
                                }
                            </td>

                            <td class="col-sm-1">
                                <a id="showModal"
                                   href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})"
                                   class="btn btn-warning waves-effect waves-light col-lg-12">
                                    <i class="fa fa-edit"></i> Modify
                                </a>
                                @if (@item.IsRemoved)
                                {
                                    <a class="btn btn-default waves-effect wave-light text-danger col-lg-12"
                                       asp-page="./Index" asp-page-handler="Reactivate" asp-route-id="@item.Id">
                                        <i class="fa fa-check"></i> Mark it as "Available"
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-default waves-effect wave-light col-lg-12"
                                       asp-page="./Index" asp-page-handler="Delete" asp-route-id="@item.Id">
                                        <i class="fa fa-close"></i> Mark it as "Deleted"
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts
{
    @if (TempData["Message"] != null)
    {
        if (TempData["Message"].ToString() == "Operation has been successfully proceeded.")
        {
            <script>
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Your work has been saved',
                    showConfirmButton: false,
                    timer: 1000
                })
            </script>
        }
        else
        {
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: @TempData["Message"],
                    footer: '<a href="">Why do I have this issue?</a>'
                })
            </script>
        }

    }
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: { search: 'Search:', searchPlaceholder: "Search ..." }
            });
            $('input[type="search"]').css('border-width', '1px');
        })
    </script>
}
